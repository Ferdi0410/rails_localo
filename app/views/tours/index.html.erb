
<div class="searchbar-container">
  <%= render 'shared/searchbar' %>
</div>

<div class="category-form">
  <%= link_to 'Art', tours_path(category: "art", query: params[:query] ), class: "category-link #{'category-link-active' if params[:category] == 'art'}",  query: params[:query] %>

  <%= link_to 'History', tours_path(category: "history", query: params[:query] ), class: "category-link #{'category-link-active' if params[:category] == 'history'}", query: params[:query] %>

  <%= link_to 'Architecture', tours_path(category: "architecture", query: params[:query] ), class: "category-link #{'category-link-active' if params[:category] == 'architecture'}", query: params[:query] %>

  <%= link_to 'Urban', tours_path(category: "urban", query: params[:query] ), class: "category-link #{'category-link-active' if params[:category] == 'urban'}",  query: params[:query] %>
</div>
<div class="container">
  <div class="row">
      <div id="tours">
        <% @tours.each do |tour|  %>
          <%= render 'pages/bigcardindex', tour: tour %>
        <% end %>
      </div>
  </div>
</div>


