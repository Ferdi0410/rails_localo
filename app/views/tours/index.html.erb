<h1>Tours in Berlin</h1>

<p style="display:inline"><%= link_to 'Art', tours_path(category: "art"), class: "category-link #{'category-link-active' if params[:category] == 'art'}" %></p>
<p style="display:inline"><%= link_to 'History', tours_path(category: "history"), class: "category-link #{'category-link-active' if params[:category] == 'history'} " %></p>
<p style="display:inline"><%= link_to 'Architecture', tours_path(category: "architecture"), class: "category-link #{'category-link-active' if params[:category] == 'architecture'}" %></p>
<p style="display:inline"><%= link_to 'urban', tours_path(category: "urban"), class: "category-link #{'category-link-active' if params[:category] == 'urban'}" %></p>
<% @tours.each do |tour|  %>
<div class="tours-class">
  <p><%= link_to tour.title, tour_path(tour) %></p>
  <ul>
    <li>category: <%= tour.category %></li>
  </ul>
  <% end %>
</div>

