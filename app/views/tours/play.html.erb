<div class="audio-box">
  <div class="audio-header">
    <%= link_to '<i class="fas fa-arrow-left"></i>'.html_safe, tour_path(@tour)%>
    <button id="slider"><i class="fas fa-sliders-h"></i></button>
  </div>
    <div id="audio-picture" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('');">
    </div>
  <input id="audio-file" value="" class="hidden"></input>
  <div class="progression">
    <div id="audio-bar"></div>
    <div id="audio-progress"></div>
  </div>
  <div class="audio-information">
    <div id="audio-timer">0:00</div>
    <div id="audio-duration">0:00</div>
  </div>
  <div class="audio-title">
    <h3 id="title"></h3>
  </div>
  <div class="controls">
    <i class="fas fa-backward"></i>
    <button id="play"><i class="fas fa-play"></i></button>
    <button id="pause"><i class="fas fa-pause"></i></button>
    <i class="fas fa-forward"></i>
  </div>
  <div class="map-button">
    <i class="fas fa-chevron-down"></i>
  </div>

  <div class="scroll">
    <button id="map-scroll"><i id="arrow" class="fas fa-arrow-down"></i></button>
  </div>
</div>


<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
></div>

