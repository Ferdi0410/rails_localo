<div class="index-box">
  <div class="col-xs-12">
    <div class="big-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path tour.photo, crop: :fill, secure: true %>');">
      <div class="card-description">
        <%= tour.title %>
      </div>
      <% if tour.guide != nil %>
        <div class="guide-avatar">
          <%= link_to guide_tour_path(tour), class: "avatar-bordered" do %>
          <%= cl_image_tag @tour.guide.photo, width: 80, height: 80, crop: :thumb, gravity: :face, class: "avatar-bordered" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

