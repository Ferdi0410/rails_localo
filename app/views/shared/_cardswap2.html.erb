<div class="flickity-carousel" id="myCarousel" data-ride="carousel" data-flickity='{ "cellAlign": "left", "freeScroll": true, "pageDots": false, "prevNextButtons": false}'>

 <div class="card carousel-cell">
   <%= link_to tour_path(tour), class: "card-link" do %>
   <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path tour.photo, crop: :fill %>');">
     <div class="card-title">
       <%= tour.title %>
     </div>
   </div>
   <%end %>
 </div>


</div>


